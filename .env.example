# Server Configuration
NODE_ENV=
PORT=3000

# Database Configuration (Render PostgreSQL)
DB_HOST=your-render-postgres-host.render.com
DB_PORT=5432
DB_NAME=email_api
DB_USER=your_render_db_user
DB_PASSWORD=your_render_db_password

# JWT Configuration
JWT_SECRET=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Data Retention (in hours)
DATA_RETENTION_HOURS=48

# CORS Configuration (use * to allow all origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads 